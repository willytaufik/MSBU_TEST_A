@model List<MSBU_Soal_Test_A.Models.ProdukModel>

@{
    ViewData["Title"] = "Daftar Produk";
}

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>@ViewData["Title"]</b></h2>
                </div>
                <div class="col-sm-6">
                    <a asp-controller="Produk" asp-action="Add" class="btn btn-primary"><i class="material-icons">&#xE147;</i>
                    <span>Tambah</span></a>
                </div>
            </div>
        </div>

        <form asp-controller="Produk" asp-action="Index">
            <div class="row">
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm">
                </div>
                <div class="col-sm-6"> 
                    <button type="submit" class="btn btn-primary">
                    <span>Cari</span>
                    </button>
                </div>
            </div>
        </form>

        <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nama Barang</th>
                <th>Kode Barang</th>
                <th>Jumlah Barang</th>
                <th>Tanggal</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produk in Model)
            {
                <tr>
                    <td>@produk.Id</td>
                    <td>@produk.NamaBarang</td>
                    <td>@produk.KodeBarang</td>
                    <td>@produk.JumlahBarang</td>
                    <td>@produk.Tanggal.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <a asp-controller="Produk" asp-action="Edit" asp-route-id="@produk.Id" class=" edit"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                        <a asp-controller="Produk" asp-action="Delete" asp-route-id="@produk.Id" class="delete"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>
</div>
